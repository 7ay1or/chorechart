<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <%- include('../partials/header'); %>
    <div class="col-10 col-md-6 col-xl-4 mx-auto">
      <h1>New Task</h1>
      <div class="form">
        <div class="form-group">
          <label for="formControlInput">Task Name</label>
          <input type="take-name" class="form-control" id="formControlInput" placeholder="Example: Washing Dashes">
        </div>
        <div class="form-group">
          <label for="formControlSelect">Assignee</label>
          <select multiple class="form-control" id="formControlSelect">
            <option>Roommate A</option>
            <option>Roommate B</option>
            <option>Roommate C</option>
            <option>Roommate D</option>
          </select>
        </div>
        <div class="form-group">
          <label for="formControlSelect">Frequency</label>
          <select multiple class="form-control" id="formControlSelect">
            <option>Daily</option>
            <option>Alternate-Day</option>
            <option>Weekly</option>
            <option>Monthly</option>
          </select>
        </div>
        <div class="form-group">
          <label for="formControlSelect">Due Day</label>
          <input type="take-name" class="form-control" id="formControlInput" placeholder="dd/mm/yyyy">
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1">Example textarea</label>
          <textarea class="form-control" id="formControlTextarea" rows="3"></textarea>
        </div>
        </form>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
    <%- include('../partials/footer'); %>
    <%- include('../partials/bootstrap'); %>
  </body>
</html>